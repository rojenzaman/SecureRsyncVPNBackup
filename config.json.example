{
  "sync": {
    "remote_servers": [
      {
        "host": "myserver1",
        "user": "user1",
        "paths": ["/remote/path1", "/remote/path2"],
        "ssh_private_key": "/app/ssh/id_rsa_myserver1",
        "backup_name": "server1_backup",
        "backup_name_format": "date_time",  // Possible values: "date_time", "date", "static"
        "preserve_paths": false,  // Set to true to preserve directory hierarchy
        "schedule": {
          "interval_hours": 24  // Backup every 24 hours
        }
      },
      {
        "host": "myserver2",
        "user": "user2",
        "paths": ["/remote/path3"],
        "ssh_private_key": "/app/ssh/id_rsa_myserver2",
        "backup_name": "server2_backup",
        "backup_name_format": "date",
        "preserve_paths": false,
        "schedule": {
          "interval_hours": 12  // Backup every 12 hours
        }
      },
      {
        "host": "myserver3",
        "user": "user3",
        "paths": ["/remote/path4", "/remote/path5"],
        "ssh_private_key": "/app/ssh/id_rsa_myserver3",
        "backup_name": "server3_sync",
        "backup_name_format": "static",
        "preserve_paths": true,
        "schedule": {
          "interval_hours": 6  // Backup every 6 hours
        }
      },
      {
        "host": "X.X.X.X",
        "user": "root",
        "paths": ["/opt/backup", "/root", "/etc/systemd"],
        "ssh_private_key": "/app/ssh/key1",
        "backup_name": "backup1",
        "backup_name_format": "static",
        "preserve_paths": true,
        "schedule": {
          "interval_hours": 24  // Backup every 24 hours
        }
      }
    ]
  },
  "settings": {
    "sync_target": "/data/sync",
    "ssh_port": 22,
    "max_days": 7,
    "debug_mode": true,
    "ssh_connection_timeout": 10,
    "rsync_max_retries": 3
  }
}
